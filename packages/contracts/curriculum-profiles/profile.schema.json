{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CurriculumProfile",
  "type": "object",
  "required": [
    "key",
    "label",
    "version",
    "description",
    "jurisdiction",
    "planner_taxonomy",
    "subject_options",
    "grade_or_stage_options",
    "framework_defaults",
    "template_defaults",
    "integration_hints",
    "status"
  ],
  "properties": {
    "key": { "type": "string", "minLength": 1 },
    "label": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },
    "description": { "type": "string", "minLength": 1 },
    "jurisdiction": { "type": "string", "minLength": 1 },
    "planner_taxonomy": {
      "type": "object",
      "required": ["subject_label", "grade_label", "unit_label"],
      "properties": {
        "subject_label": { "type": "string" },
        "grade_label": { "type": "string" },
        "unit_label": { "type": "string" }
      },
      "additionalProperties": false
    },
    "subject_options": {
      "type": "array",
      "items": { "type": "string" }
    },
    "grade_or_stage_options": {
      "type": "array",
      "items": { "type": "string" }
    },
    "framework_defaults": {
      "type": "array",
      "items": { "type": "string" }
    },
    "template_defaults": {
      "type": "object",
      "properties": {
        "default_status": { "type": "string" },
        "suggested_sections": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false
    },
    "integration_hints": {
      "type": "object",
      "properties": {
        "google_addon_context": { "type": "string" },
        "lti_context_tag": { "type": "string" },
        "oneroster_context_tag": { "type": "string" }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "string",
      "enum": ["active", "deprecated"]
    }
  },
  "additionalProperties": false
}
