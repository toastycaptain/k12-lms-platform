{
  "name": "@k12/ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./forms": {
      "types": "./src/forms/index.ts",
      "default": "./src/forms/index.ts"
    },
    "./tokens": {
      "types": "./src/tokens.ts",
      "default": "./src/tokens.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "build": "tsup src/index.ts src/forms/index.ts src/tokens.ts --format esm --dts --clean",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.1.4",
    "jsdom": "^28.1.0",
    "tsup": "^8.5.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.18"
  }
}
